@{
    ViewData["Title"] = "Accountprüfung";
}
@section scripts {
    <script src="~/js/acccheck.js"></script>
}

<div class="container-fluid mt-5">
    <div class="container text-center info-container">

        <h2>Zu prüfenden Anmeldenamen eingeben</h2>
        <p>Unbestätigte Hacks einschließen?<input type="checkbox" checked class="mx-1" id="includeUnverified"></p>
        <div class="d-flex">
            <input type="text" id="accinput" class="datainput flex-fill min-w-70" autocomplete="off" placeholder="E-Mail-Adresse oder Benutzername">
            <button id="sendButton" class="btn btn-outline-dark" type="button">Absenden</button>
        </div>
        <div class="row">
            <div class="col-sm" id="results">
            </div>
            <div class="col-sm" id="details">
            </div>
        </div>
    </div>
</div>